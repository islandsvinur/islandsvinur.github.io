#      <+ day_header +>
#      <% day_entries.each do |entry| %>
#          <+ entry +>
#      <% end %>
#  <% end %>

sidebar_twitter: |

  <div id="sidebarTwitter" class="sidebarBox">
  <h2 class="sidebarTitle">Volg me op <a href="http://twitter.com/islandsvinur">Twitter</a></h2>
  <div id="tweetList"></div>
  </div>

sidebar_gowalla: |

  <div id="sidebarGowalla" class="sidebarBox">
  <h2 class="sidebarTitle">Waar hang ik uit?</h2>
  <div id="gowallaList"></div>
  </div>

sidebar_list_left: 
- sidebar_about
- sidebar_syndicate

sidebar_list_right:
- sidebar_tag_list
- sidebar_archive

sidebar_list_wide:
- sidebar_featured
- sidebar_disqus
